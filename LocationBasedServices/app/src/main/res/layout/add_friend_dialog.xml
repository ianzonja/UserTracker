<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:id="@+id/fragment_dialog_pickNewsType">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter email of your friend"
            android:id="@+id/addFriendTextview"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginTop="5dp"/>

    <EditText
            android:id="@+id/addFriendEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_below="@id/addFriendTextview"
            android:hint="Email" />

    <Button
            android:id="@+id/addFriendSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/addFriendEmail"
            android:background="@color/blue_2"
            android:text="Submit"/>
</RelativeLayout>