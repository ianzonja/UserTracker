<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

    <TextView
            android:id="@+id/receivedMessageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="8dp"
            android:text="date of message"
            app:layout_constraintEnd_toStartOf="@+id/senderImage_ReceivedMessage"
            app:layout_constraintBottom_toTopOf="@id/receivedMessage"/>

    <TextView
            android:id="@+id/receivedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext_register_login"
            android:maxWidth="300dp"
            android:padding="16dp"
            android:text="This is my message that will wrap into multiple lines and keep on going"
            app:layout_constraintRight_toLeftOf="@+id/senderImage_ReceivedMessage"
            app:layout_constraintTop_toTopOf="@+id/senderImage_ReceivedMessage" />

    <ImageView
            android:id="@+id/senderImage_ReceivedMessage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/btn_star_big_on" />

</androidx.constraintlayout.widget.ConstraintLayout>